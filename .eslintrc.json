{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "standard",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "strict": [
      2,
      "never"
    ],
    "camelcase": "warn",
    "no-trailing-spaces": "error",
    "comma-dangle": "error",
    "no-undef": "error",
    "eqeqeq": [
      2,
      "smart"
    ]
  }
}